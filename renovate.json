{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>dfds/renovate-config"
  ],
  "terraform": {
    "managerFilePatterns": [
      "/\\.tf$/",
      "/\\.tofu$/"
    ]
  },
  "packageRules": [
    {
        "matchUpdateTypes": [
            "lockFileMaintenance"
        ],
        "addLabels": [
            "lockFile",
            "on-hold"
        ],
        "minimumReleaseAge": null,
        "automerge": false,
        "matchCurrentVersion": "!/^0/"
    },
    {
      "matchUpdateTypes": [
        "pin",
        "digest",
        "patch"
      ],
      "addLabels": [
        "release:patch"
      ],
      "minimumReleaseAge": "1 day",
      "automerge": true
    },
    {
      "matchUpdateTypes": [
        "minor"
      ],
      "addLabels": [
        "release:minor"
      ],
      "minimumReleaseAge": "7 days",
      "automerge": false
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "addLabels": [
        "release:major"
      ],
      "minimumReleaseAge": "14 days",
      "automerge": false
    },
    {
      "description": "Group dependencies affecting the QA environment.",
      "matchFileNames": [
        "tests/qa/**",
        "scripts/qa/**",
        ".github/**",
        "mise.toml"
      ],
      "addLabels": [
        "norelease"
      ],
      "automerge": true
    }
  ]
}
