{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>dfds/renovate-config"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "pin",
        "digest",
        "patch",
        "lockFileMaintenance"
      ],
      "addLabels": [
        "release:patch"
      ],
      "minimumReleaseAge": "1 day",
      "automerge": true
    },
    {
      "matchUpdateTypes": [
        "minor"
      ],
      "addLabels": [
        "release:minor"
      ],
      "minimumReleaseAge": "7 days",
      "automerge": false
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "addLabels": [
        "release:major"
      ],
      "minimumReleaseAge": "14 days",
      "automerge": false
    },
    {
      "description": "Group dependencies affecting the QA environment.",
      "additionalBranchPrefix": "qa/",
      "matchFileNames": [
        "tests/qa/**"
      ],
      "addLabels": [
        "norelease"
      ],
      "automerge": true
    }
  ]
}
